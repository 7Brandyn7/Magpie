<Page x:Class="Magpie.Options.AdvancedOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magpie.Options"
      xmlns:props="clr-namespace:Magpie.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="AdvancedOptionsPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="OptionsPageStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Log Level" Padding="0" VerticalContentAlignment="Center" />
            <ComboBox Margin="10,0,0,0" />
        </StackPanel>
        <CheckBox Content="Display frame rate" Margin="0,20,0,0" IsChecked="{Binding Source={x:Static props:Settings.Default},Path=ShowFPS,Mode=TwoWay}"/>
    </StackPanel>
</Page>
